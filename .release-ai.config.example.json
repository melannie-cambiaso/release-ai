{
  "_comment_branches": "Branch configuration - customize based on your git workflow",
  "main_branch": "main",
  "develop_branch": "develop",
  "_comment_develop_branch": "Branch used for development and where version bump commits are searched",
  "pr_target_branch": "main",
  "_comment_pr_target_branch": "Target branch for release PRs (usually main/master for production)",
  "version_files": [
    {
      "path": "package.json",
      "field": "version",
      "description": "Standard npm package version"
    },
    {
      "path": "app.json",
      "field": "version",
      "description": "Expo app version (root-level field)"
    },
    {
      "path": "app.config.js",
      "field": "expo.version",
      "description": "Expo app version (nested field in JS config)"
    },
    {
      "path": "VERSION",
      "field": "",
      "description": "Plain text version file"
    }
  ],
  "release_notes_dir": ".releases",
  "ai_features": {
    "auto_suggest_version": true,
    "generate_notes": true,
    "validate_changes": true,
    "conversational_mode": false
  },
  "commit_conventions": {
    "types": ["feat", "fix", "docs", "style", "refactor", "test", "chore", "perf", "ci", "build", "revert"],
    "breaking_change_indicators": ["!", "BREAKING CHANGE:"]
  },
  "claude": {
    "model": "claude-sonnet-4-5-20250929",
    "max_tokens": {
      "suggest_version": 500,
      "generate_notes": 2048,
      "validate_changes": 1024,
      "assist": 1024
    }
  }
}
